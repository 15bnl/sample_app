
<h1 class ="top">Books</h1>



<div class="index_table">
<table>
  <tr>
    <th class="title">Title</th>
    <th class="body">Body</th>
    <th> </th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to "Show", "/books/#{book.id}" %>
      <%= link_to "Edit", "/books/#{book.id}/edit" %>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
  </tr>
  <% end %>
</table>

</div>




<% if @book.errors.any? %>
<ul><%= @book.errors.count %>error prohibited this book from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
</ul>
<% end %>




<h2>New book</h2>
<%= form_with model: @book do |f| %> 
<!--, url: 'books', method: :post-->
 <h5>Title</h5>
 <%= f.text_field :title %>
 
 <h5>Body</h5>
 <%= f.text_area :body %>
 
 <p><%= f.submit 'Create Book' %></p>
 <% end %>



