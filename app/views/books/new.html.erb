<h1>Books</h1>

<% @books.each do |book| %>

<span><%= book.title %></span>
<span><%= book.body %></span>
<span><%= link_to "show", "/books/#{book.id}" %></span>

<% end %>


<% if @book.errors.any? %>
<ul><%= @book.errors.count %>error prohibited this book from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
</ul>
<% end %>




<h2>New book</h2>
<%= form_with model: @book do |f| %> 
<!--, url: 'books', method: :post-->
 <h5>Title</h5>
 <%= f.text_field :title %>
 
 <h5>Body</h5>
 <%= f.text_area :body %>
 
 <%= f.submit 'Create Book' %>
 <% end %>
